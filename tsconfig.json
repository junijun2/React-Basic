{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,

    // ─── 여기부터 alias 설정 ───
    "baseUrl": ".",
    "paths": {
      "@/*":           ["src/*"],
      "@pages/*":      ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@assets/*":     ["src/assets/*"],
      "@recoil/*":     ["src/recoil/*"],
      "@types/*":      ["src/types/*"],
      "@apis/*":       ["src/apis/*"]
    }
  },

 
  "include": ["src"]
}
